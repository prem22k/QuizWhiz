{
  "name": "quizwhiz",
  "version": "0.1.0",
  "description": "Real-time serverless quiz platform for live events using Next.js and Firebase",
  "author": "Lakshya",
  "homepage": "https://quiz-whiz-indol.vercel.app",
  "keywords": [
    "nextjs",
    "firebase",
    "realtime",
    "quiz-app",
    "typescript",
    "serverless"
  ],
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -p 9002",
    "dev:desktop": "npx tauri dev",
    "tauri": "tauri",
    "android": "export NDK_HOME=/home/premsaik/Android/Sdk/ndk/29.0.13846066 && tauri android build",
    "build": "npm run build:web",
    "build:web": "cross-env NODE_ENV=production next build",
    "build:mobile": "npm run build:web && npx cap sync",
    "build:desktop": "npm run build:web && npx tauri build",
    "genkit:dev": "genkit start -- tsx src/ai/dev.ts",
    "genkit:watch": "genkit start -- tsx --watch src/ai/dev.ts",
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "start-web": "next dev --turbopack -p 9002",
    "build-app": "cross-env NEXT_PUBLIC_ELECTRON_BUILD=true next build && electron-builder",
    "sync": "npx cap sync",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:9002 && electron .\""
  },
  "main": "electron-main.js",
  "build": {
    "appId": "com.quizwhiz.app",
    "productName": "QuizWhiz",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron-main.js",
      "package.json",
      "!node_modules/@dataconnect/generated"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "@capacitor-community/keep-awake": "^8.0.0",
    "@capacitor/camera": "^8.0.0",
    "@capacitor/core": "^8.0.2",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/preferences": "^8.0.0",
    "@capacitor/push-notifications": "^8.0.0",
    "@capacitor/status-bar": "^8.0.0",
    "@dataconnect/generated": "file:src/dataconnect-generated",
    "@genkit-ai/google-genai": "^1.20.0",
    "@genkit-ai/next": "^1.20.0",
    "@hookform/resolvers": "^4.1.3",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-menubar": "^1.1.6",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@types/he": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.5.0",
    "embla-carousel-react": "^8.6.0",
    "firebase": "^12.7.0",
    "framer-motion": "^12.29.2",
    "genkit": "^1.20.0",
    "googleapis": "^170.1.0",
    "he": "^1.2.0",
    "lucide-react": "^0.475.0",
    "next": "^16.1.1",
    "nodemailer": "^7.0.13",
    "patch-package": "^8.0.0",
    "react": "^19.2.3",
    "react-confetti": "^6.4.0",
    "react-day-picker": "^8.10.1",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.54.2",
    "react-intersection-observer": "^10.0.2",
    "react-qr-code": "^2.0.15",
    "recharts": "^2.15.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "use-sound": "^5.0.0",
    "uuid": "^9.0.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@capacitor/android": "^8.0.2",
    "@capacitor/cli": "^8.0.2",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.9",
    "@types/react": "npm:types-react@^19.0.0-rc.1",
    "@types/react-dom": "npm:types-react-dom@^19.0.0-rc.1",
    "@types/uuid": "^9.0.8",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron-builder": "^26.7.0",
    "genkit-cli": "^1.20.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "overrides": {
    "react": "$react",
    "react-dom": "$react-dom",
    "@genkit-ai/next": {
      "next": "$next"
    },
    "fast-xml-parser": "^5.3.4"
  }
}